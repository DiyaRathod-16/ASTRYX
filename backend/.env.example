# ===========================================
# ASTRYX Backend Environment Configuration
# ===========================================

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=astryx_db
DB_USER=astryx_user
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Autonomous Mode
AUTONOMOUS_MODE=false
AUTO_APPROVE_THRESHOLD=0.95

# Data Ingestion Schedule (cron format)
INGESTION_SCHEDULE=*/15 * * * *
INGESTION_ENABLED=true

# External API Keys (Optional for demo)
# Weather APIs
OPENWEATHERMAP_API_KEY=
WEATHERBIT_API_KEY=

# Satellite APIs
NASA_EARTHDATA_API_KEY=

# News APIs
NEWSAPI_KEY=
GDELT_API_KEY=

# Disaster APIs
USGS_API_KEY=
EONET_API_KEY=

# Traffic APIs
TOMTOM_API_KEY=

# Air Quality APIs
AIRVISUAL_API_KEY=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000
